!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Alex Howington | Web Developer'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Portfolio'}"}
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700,800|Bree+Serif", rel: "stylesheet", type: "text/css"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main.container{:role => "main"}
      = render 'layouts/messages'
      = yield
    %footer
      = render 'layouts/footer'
